@using UI.Localization
<template id="create-organization-component">
    <div class="row">
        <div class="organization-create-form" method="post" action="/Organization/Create">
            <div class="input-field col s12 m6">
                <input type="text" name="Name" id="OrganizationName" />
                <label for="OrganizationName">@OrganizationContent.OrganizationNameText</label>
                <span class="field-validation-error field-validation-valid" data-valmsg-for="OrganizationName" data-valmsg-replace="true"></span>
            </div>
            <div class="input-field col s12 m6">
                <input type="email" id="OrganizationEmail" name="Email" />
                <label for="OrganizationEmail">@OrganizationContent.OrganizationEmailText</label>
                <span class="field-validation-error field-validation-valid" data-valmsg-for="OrganizationEmail" data-valmsg-replace="true"></span>
            </div>

            <div class="input-field col s12">
                <input type="text" name="Url" id="OrganizationUrl" />
                <label for="OrganizationUrl">@OrganizationContent.WebSiteText</label>
            </div>

            <div class="input-field col s12">
                <input type="text" name="Location" id="OrganizationLocation" />
                <label for="OrganizationLocation">@OrganizationContent.LocationText</label>
            </div>
            <div class="input-field col s12">
                <select id="ISOCountryCode" name="ISOCountryCode">
                    <option v-for="country in countries" v-bind:value="country.isoCountryCode">
                        {{ country.name}}
                    </option>
                </select>
                <label for="IsoCountryCode">@OrganizationContent.CountryText</label>
            </div>

            <div class="input-field col s12">
                <textarea rows="5" cols="50" name="Description" id="Description" class="materialize-textarea"></textarea>
                <label for="Description">@OrganizationContent.OrganizationDescription</label>
            </div>
            <div class="input-field col s12">
                <a href="#" id="create-organization-submit" class="btn primary">@OrganizationContent.CreateButtonText</a>
            </div>
        </div>
    </div>
</template>